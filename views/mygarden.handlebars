<!-- SEARCH FORM -->
<div class="row w-100">
  <div class="col-2">
    <div class="card m-4 p-0" id="search-card">
      <h3 class="card-header m-0">Search</h3>
      <div class="card-body">
        <form>
          <div class="form-group">
            <input type="nput" class="form-control" id="search-plants" aria-describedby="searchbox-plants">
          </div>
          <button class="btn btn-secondary w-100">Add to List</button>
        </form>
      </div>
    </div>
    <!-- MY LIST -->
    <div class="card m-4 p-0" id="my-list">
      <h3 class="card-header m-0">My List</h3>
      <div class="card-body">
        <div class="list-group">
          {{#if color_options }}
            <div class="btn-group dropright">
              <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                Dropright
              </button>
              <div class="dropdown-menu">
                <!-- Dropdown menu links -->
                {{}}
              </div>
            </div>
          {{/if}}
          <a href="#" class="list-group-item list-group-item-action">Potatoes</a>
          <a href="#" class="list-group-item list-group-item-action">Tomatoes</a>
          <a href="#" class="list-group-item list-group-item-action">Special Lettuce</a>
        </div>
      </div>
    </div>
  </div>
  <!-- GARDEN GRID -->
  <div class="card my-4 p-0" id="garden-grid">
    <h3 class="card-header m-0">Big Papa's Garden</h3>
    <div class="card-body">
      <img src="./assets/grid.png" />
    </div>
  </div>
</div>