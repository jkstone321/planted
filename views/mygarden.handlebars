<div class="row w-100">

  <div class="col-2">
    <!-- SEARCH FORM -->
    <div class="card m-4 p-0" id="search-card">
      <h3 class="card-header m-0">Search</h3>
      <div class="card-body">
        <form>
          <div class="form-group">
            <input type="input" class="form-control" id="search-plants" aria-describedby="searchbox-plants">
          </div>
          <button class="btn btn-secondary w-100">Add to List</button>
        </form>
      </div>
    </div>
    <!-- MY LIST -->
    <div class="card m-4 p-0" id="my-list">
      <h3 class="card-header m-0">My List</h3>
      <div class="card-body">
        <div class="list-group">
          <a href="#" class="list-group-item list-group-item-action">Potatoes</a>
          <a href="#" class="list-group-item list-group-item-action">Tomatoes</a>
          <a href="#" class="list-group-item list-group-item-action">Special Lettuce</a>
        </div>
      </div>
    </div>
  </div>
  <!-- GARDEN GRID -->
  <div class="col-8 card m-4 p-0" id="grid-system">
    <h3 class="card-header m-0">Big Papa's Garden</h3>
    <div class="card-body">
      <div id="gridContainer">
        <!-- grid squares generated here -->

      </div>

      <div id="colorPickerContainer" style="display:flex">
        <div id="currentColorDisplay">
          <!-- this box shows the currently selected color -->
        </div>
        <div id="colorPalette">
          <!-- color palette squares generated here -->
        </div>
      </div>

      <form id="frmColorPicker">
        <input id="inpCurrentColor" class="form-control w-50" type="text" placeholder="e.g.: red or #FF0000" />
        <input type="submit" class="btn btn-primary btn-sm" value="Set Color" />
        <input type="button" onclick="clearGrid()" class="btn btn-secondary btn-sm" value="Clear Grid" />
      </form>

    </div>

  </div>